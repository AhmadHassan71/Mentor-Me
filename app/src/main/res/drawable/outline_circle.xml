<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#DDF7F7" />
        </shape>
    </item>
    <!-- Black outline -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#147076" />
        </shape>
    </item>
</layer-list>
