<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DDF7F7">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom"
        android:backgroundTint="#50C1C8"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            app:tint="#115E63" />

        <TextView
            android:id="@+id/MentorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backButton"
            app:layout_constraintVertical_bias="0.41" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/transparent_circle"
            android:padding="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/MentorNameTextView"
            app:layout_constraintStart_toStartOf="@+id/MentorNameTextView"
            app:srcCompat="@drawable/personpic" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textColor="#115E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/NameEditText"
        app:layout_constraintStart_toStartOf="@+id/NameEditText"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <EditText
        android:id="@+id/NameEditText"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Ali"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Email"
        android:textColor="#115E63"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NameEditText"
        app:layout_constraintTop_toBottomOf="@+id/NameEditText" />

    <EditText
        android:id="@+id/EmailEditText"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="ali@email.com"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Contact Number"
        android:textColor="#115E63"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/EmailEditText"
        app:layout_constraintTop_toBottomOf="@+id/EmailEditText" />

    <EditText
        android:id="@+id/ContactEditText"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="+92 321 12345687"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Country"
        android:textColor="#115E63"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ContactEditText"
        app:layout_constraintTop_toBottomOf="@+id/ContactEditText" />

    <Spinner
        android:id="@+id/CountryEditText"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="City"
        android:textColor="#115E63"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/CountryEditText"
        app:layout_constraintTop_toBottomOf="@+id/CountryEditText" />

    <Spinner
        android:id="@+id/CityEditText"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Enter City"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:backgroundTint="#115E63"
        android:duplicateParentState="false"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/LogOutButton"
        app:layout_constraintEnd_toEndOf="@+id/CityEditText"
        app:layout_constraintStart_toStartOf="@+id/CityEditText"
        app:layout_constraintTop_toBottomOf="@+id/CityEditText"
        app:layout_constraintWidth_percent="0.7" />

    <Button
        android:id="@+id/LogOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#9e2808"
        android:duplicateParentState="false"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CityEditText"
        app:layout_constraintStart_toStartOf="@+id/CityEditText"
        app:layout_constraintWidth_percent="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>